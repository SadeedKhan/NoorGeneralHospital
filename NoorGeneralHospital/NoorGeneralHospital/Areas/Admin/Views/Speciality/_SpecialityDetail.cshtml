@model IList<NoorGeneralHospital.Areas.Admin.Models.Entities.Speciality>

<div class="row">
    <div class="col-sm-5 col-5">
        <h4 class="page-title">Speciality Details</h4>
    </div>
    <div class="col-sm-7 col-7 text-right m-b-30">
        <a href="/Admin/Speciality/_AddEditSpeciality" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Add Department</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped custom-table mb-0 datatable">
                <thead>
                    <tr>
                        <th>Speciality Name</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cur in Model)
                    {
                        <tr>
                            <td>@cur.SpecialityName</td>
                            <td>@cur.CreatedOn</td>
                            <td>
                                @{
                                    if (cur.IsActive == true)
                                    {
                                        <span class="custom-badge status-green">Active</span>
                                    }
                                    else
                                    {
                                        <span class="custom-badge status-red">Active</span>
                                    }
                                }
                            </td>
                            <td class="text-right">
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" onclick="EditSpeciality(@cur.Id)"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                        <a class="dropdown-item" onclick="DeleteSpeciality(@cur.Id)"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
