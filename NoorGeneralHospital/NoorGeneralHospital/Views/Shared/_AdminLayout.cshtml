<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/assets/img/favicon.ico">
    <title>Noor General Hospital(Admin)</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/bootstrap-datetimepicker.min.css"> 
    <link rel="stylesheet" type="text/css" href="~/Content/User/assets/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/toastr.min.css">
   
    <!--[if lt IE 9]>
        <script src="~/Content/assets/js/html5shiv.min.js"></script>
        <script src="~/Content/assets/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div   class="preloader">
        <div class="loader"></div>
        <h6 class="preloader-text ">Noor<br>Hospital</h6>
    </div>
    <!-- End of .preloader -->
    <div class="main-wrapper">
        <!-- Start of .preloader -->

        <div class="header">
            <div class="header-left">
                <a href="#" class="logo">
                    <span   class="test">Noor General Hospital</span>
                </a>
            </div>
            <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
            <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
            <ul class="nav user-menu float-right">
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="~/Content/assets/img/user.jpg" width="40" alt="Admin">
                            <span class="status online"></span>
                        </span>
                        <span>Admin</span>
                    </a>
                    <div class="dropdown-menu">
                        @using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()" title="Logout">
                                Logout
                            </a>
                        }
                    </div>
                </li>
            </ul>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">Main</li>
                        <li class="active">
                            <a href='@Url.Action("Index", "Dashboard")'><i class="fa fa-dashboard"></i> <span>Dashboard</span></a>
                        </li>
                        <li class="submenu">
                            <a href="#"><i class="fa fa-edit"></i> <span> Lookups</span> <span class="menu-arrow"></span></a>
                            <ul style="display: none;">
                                <li>
                                    <a href='@Url.Action("Index", "Specialities")'><i class="fa fa-hospital-o"></i> <span>Speciality</span></a>
                                </li>
                                <li>
                                    <a href='@Url.Action("Index", "Location")'><i class="fa fa-building-o"></i> <span>Location</span></a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href='@Url.Action("Index", "Doctor")'><i class="fa fa-user-md"></i> <span>Doctors</span></a>
                        </li>

                        <li>
                            <a href='@Url.Action("Index", "Appointment")'><i class="fa fa-calendar"></i> <span>Appointments</span></a>
                        </li>
                        <li>
                            <a href='@Url.Action("Index", "DoctorSchedule")'><i class="fa fa-calendar-check-o"></i> <span>Doctor Schedule</span></a>
                        </li>

                        <li>
                            <a href='@Url.Action("Index", "Report")'><i class="fa fa-flag-o"></i> <span>Reports</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            @RenderBody()
        </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="~/Content/assets/js/jquery-3.4.1.min.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/select2.min.js"></script>
    <script src="~/Content/assets/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/assets/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/assets/js/moment.min.js"></script>
    <script src="~/Content/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Content/assets/js/jquery.slimscroll.js"></script>
    <script src="~/Content/assets/js/Chart.bundle.js"></script>
    <script src="~/Content/assets/js/chart.js"></script>
    <script src="~/Content/assets/js/app.js"></script>
    <script src="~/Content/assets/js/toastr.min.js"></script>
    <script src="~/Content/assets/js/SweetAlert2.min.js"></script>
</body>
</html>
