@model IEnumerable<NoorGeneralHospital.Models.Sp_Model.Doctor_GetDoctorDetails>

@{
    ViewBag.Title = "Details";
}


<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Doctors</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="#" onclick="_AddEditDoctor(0)" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Add Doctor</a>
    </div>
</div>
<div class="row doctor-grid">
    @foreach (var doc in Model)
    {
        <div class="col-md-4 col-sm-4  col-lg-3">
            <div class="profile-widget">
                <div class="doctor-img">
                    @{
                        if (string.IsNullOrEmpty(doc.ImagePath))
                        {
                            <a onclick="DoctorProfile('@doc.Id')" class="avatar" href="#"><img alt="" src="~/Content/assets/img/user.jpg"></a>
                        }
                        else
                        {
                            <a onclick="DoctorProfile('@doc.Id')" class="avatar" href="#"><img alt="" src="/../@doc.ImagePath"></a>
                        }

                    }
                </div>
                <div class="dropdown profile-action">
                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="#" onclick="_AddEditDoctor('@doc.Id')"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                        <a class="dropdown-item" href="#" onclick="DeleteDoctor('@doc.Id')"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                    </div>
                </div>
                <h4 class="doctor-name text-ellipsis"><a href="#" onclick="DoctorProfile(@doc.Id)">@doc.UserName</a></h4>
                <div class="doc-prof">@doc.Speciality</div>
                <div class="user-country">
                    <i class="fa fa-map-marker"></i> Pakistan, @doc.Location
                </div>
            </div>
        </div>
    }
</div>
