@model NoorGeneralHospital.Models.InputDTO.ServiceInput

@{
    ViewBag.Title = "Create/Update";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <h4 class="page-title">Create/Update Services</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        @using (Html.BeginForm("SaveServices", "Services", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                @Html.HiddenFor(d => d.Id)
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Username </label>
                        @Html.TextBoxFor(s => s.ServiceTitle, new { @class = "form-control", @placeholder = "Enter Services Title" })
                        @Html.ValidationMessageFor(s => s.ServiceTitle, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Avatar</label>
                        <div class="profile-upload">
                            <div class="upload-input">
                                @Html.TextBoxFor(m => m.file, new { type = "file" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Short Biography(Optional)</label>
                @Html.TextAreaFor(s => s.Description, new { @class = "form-control", @rows = "3", @cols = "30", @placeholder = "Enter Message" })
            </div>
            <div class="form-group">
                <label class="display-block">Service Status</label>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(s => s.IsActive, true, new { @class = "form-check-input", @name = "status", @checked = "checked" })
                    <label class="form-check-label">
                        Active
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(s => s.IsActive,  new { @class = "form-check-input", @name = "status" })
                    <label class="form-check-label">
                        Inactive
                    </label>
                </div>
            </div>
            <div class="m-t-20 text-center">
                <button class="btn btn-primary submit-btn">Create Service</button>
            </div>
        }
    </div>
</div>

<script src="~/Content/assets/js/jquery.validate.min.js"></script>
<script src="~/Content/assets/js/jquery.validate.unobtrusive.min.js"></script>

<script>
    $(document).ready(function () {

        $('#DOB').datetimepicker({
            format: 'DD/MM/YYYY',
        });

        $('form').submit(function (e) {
            e.preventDefault();
            var isValid = $(this).validate().form();
            if (!isValid) return false;
            else {
                debugger
                var fileInput = document.getElementById('file');
                var file = fileInput.files[0];
                var formData = new FormData(this);
                formData.append('file', file);
                $.ajax({
                    url: '/Services/SaveServices',
                    data: formData,
                    type: 'POST',
                    processData: false,
                    contentType: false,
                    beforeSend: function () {
                    },
                    complete: function () {
                    },
                    success: function (res) {
                        if (res.Code == "1") {
                            toastr.success(res.Message, 'success!');
                            _ServicesDetail();
                        }
                        else {
                            toastr.error(res.Message, 'error!');
                        }
                    },
                    error: function (jqXHR, error, errorThrown) {
                        toastr.error('Sorry Try again', 'error!');
                    },
                });
            }
        });

    });</script>
